<div class="container">
    <div class="row">
        <div class="col-md-12">
            <h1>The Austin Restaurant Checklist</h1>
        </div>
    </div>

    <div class="row">
        <div class="col-md-12" id="formDiv">
            <h2>Add a Restaurant</h2>
            <form class="create-form">

                <div class="form-row">
                   
                        <label for="placeName">Restaurant Name:</label>
                  

                    
                        <input type="text" id="placeName" name="name">
                    
                </div>

                <button type="submit">Add Restaurant</button>
            </form>
        </div>
    </div>    

    <div class="row">
        <div class="col-md-5" id="notTried">
            <h2>Restaurants to Try</h2>

            <ul>
                {{#each restaurants}}
                    {{#unless tried}}
                        <li>
                            {{restaurant_name}}

                            <button class="triedIt" data-id="{{id}}">
                                Tried
                            </button>
                        </li>
                    {{/unless}}  
                {{/each}}      
            </ul>
        </div>
    
        <div class="col-md-2"></div>

        <div class="col-md-5" id="haveTried">
            <h2>Restaurants Tried</h2>

            <ul>
                {{#each restaurants}}
                    {{#if tried}}
                        <li>
                            {{restaurant_name}}
                        </li>
                    {{/if}}  
                {{/each}}      
            </ul>
        </div> 
    </div>
</div>