<h1>Restaurant Tracker</h1>

<h2>Restaurants I Haven't Tried</h2>

<ul>
    {{#each restaurants}}
        {{#unless tried}}
            <li>
                {{restaurant_name}}

                <button class="triedIt" data-id="{{id}}">
                    Tried
                </button>
            </li>
        {{/unless}}  
    {{/each}}      
</ul>

<h2>Restaurants I Have Tried</h2>

<ul>
    {{#each restaurants}}
        {{#if tried}}
            <li>
                {{restaurant_name}}
            </li>
        {{/if}}  
    {{/each}}      
</ul>

<h2>Add a Restaurant</h2>
<form class="create-form">

  <div class="form-group">
    <label for="placeName">Restaurant Name:</label>
    <input type="text" id="placeName" name="name">
  </div>

  <button type="submit">Add Restaurant</button>
</form>